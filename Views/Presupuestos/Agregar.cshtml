@model Models.AgregarProductoPresupuesto
@{
    ViewData["Title"] = "Agregar Productos al presupuesto nÂ°" + ViewBag.Id.ToString();
}


<h1>@ViewData["Title"]</h1>

<form asp-controller="Presupuestos" asp-action="AgregarProducto" asp-route-id="@ViewBag.Id" method="post" class="bg-light container-fluid">
    <section>
        <label for="Producto">Productos:</label>
        <select name="IdProducto" id="IdProducto" asp-items="@Model.Producto" class="form-select">
        </select>
    </section>
    <section>
        <label asp-for="Cantidad">Cantidad</label>
        <input asp-for="Cantidad" class="form-control" min="1" placeholder="1" required>
    </section>

    <section class="text-center form-group align-items-center">
        <input type="submit" class="btn btn-warning col-2 m-3" value="Agregar">
        <a class="btn btn-success col-2 m-3" asp-area="" asp-controller="Presupuestos"
            asp-action="ListarPresupuestos">Volver</a>
    </section>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}